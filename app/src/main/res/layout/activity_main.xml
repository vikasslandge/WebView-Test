<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:id="@+id/et1"
             android:hint="Enter url"
            android:gravity="center"/>
         <Button
            android:layout_width="0dp"
             android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:id="@+id/b1"
             android:onClick="load"
             android:background="@drawable/ic_search_black_24dp"/>
        </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:id="@+id/wview" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:id="@+id/b2"
            android:onClick="load"
            android:background="@drawable/ic_facebook_logo_button"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.2"
             android:layout_height="wrap_content"
            android:id="@+id/b3"
            android:onClick="load"
            android:background="@drawable/ic_google_plus_logo_button"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.2"
             android:layout_height="wrap_content"
            android:id="@+id/b4"
            android:onClick="load"
            android:background="@drawable/ic_twitter_logo_button"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.2"
             android:layout_height="wrap_content"
            android:id="@+id/b5"
            android:onClick="load"
            android:background="@drawable/ic_linkedin_logo_button"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="@string/html"
            android:background="#70e988"
            android:id="@+id/html"
            android:onClick="load"/>

    </LinearLayout>

</LinearLayout>